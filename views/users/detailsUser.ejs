<!DOCTYPE html> 
<html> 
  
<head> 
    <%- include('../partials/head'); %>
</head> 

<body class="container">

    <header>
        <%- include('../partials/header', { user: user }); %>
    </header>
    <div>
        <h4>User</h4>
        <a  href="/users">Back To Users List</a>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Username: 
            </dt>
            <dd class="col-sm-10">
                <%= user.username %>
            </dd>
            <dt class="col-sm-2">
                Email: 
            </dt>
            <dd class="col-sm-10">
                <%= user.email %>
            </dd>
            <dt class="col-sm-2">
                First Name: 
            </dt>
            <dd class="col-sm-10">
                <%= user.first_name %>
            </dd>
            <dt class="col-sm-2">
                Last Name: 
            </dt>
            <dd class="col-sm-10">
                <%= user.last_name %>
            </dd>
        </dl>
    </div>
    
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body> 
  
</html>  